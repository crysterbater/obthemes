menu.items.justify: left

!! Color of the disabled items
menu.items.disabled.text.color: #d7d7d7

!! Unselected bullet color
menu.bullet.image.color: #000000

!! Selected item (and bullet)
menu.items.active.bg: Flat
menu.items.active.bg.color: #EE3C79
menu.items.active.text.color: #FFFFFF
menu.bullet.selected.image.color: #ffffff



!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
